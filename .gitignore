.env
.env.local
.env.development
.env.production

# Ignore database dumps
*.sql
*.sql.gz
*.sql.zip

# Ignore OS-generated files
.DS_Store
Thumbs.db

# Ignore dependency directories
node_modules/
vendor/

# Ignore compiled assets
*.log
npm-debug.log*
yarn-debug.log*
yarn-error.log*

# Ignore IDE/editor files
.vscode/
.idea/
*.sublime-project
*.sublime-workspace

